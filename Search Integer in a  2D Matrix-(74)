public class Sollution{
    public static void main(String args[]){
        int arr[]={3,2,4,9,12};
        int n=arr.length;
        int k=3;
        int sum=0;
        int maxSum;
      for(int i=0; i<k; i++){
        sum+=arr[i];
      }
      maxSum=sum;
      for(int j=k; j<n; j++){
        sum=sum+arr[j]-arr[j-k];
        if(maxSum<sum){
            maxSum=sum;
        }
      }
      System.out.println(maxSum);
    }
}
