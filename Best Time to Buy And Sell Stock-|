class Solution {
    public int maxProfit(int[] prices) {
        int maxPrice=0;
        int buyPrice=Integer.MAX_VALUE;
        for (int i=0; i<prices.length; i++){
            if(buyPrice>prices[i]){
                buyPrice=prices[i];
            }
            else{
               int profit=prices[i]-buyPrice; 
               if(maxPrice<profit){
                maxPrice=profit;
               }
            }
        }
        if(maxPrice<0){
            return 0;
        }
        else{
            return maxPrice;
        }
    }
}
