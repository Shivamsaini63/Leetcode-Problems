class Solution {
    public int mySqrt(int x) {
        long lo=1 ,hi=x;
        long ans=0;
         if(x==0 || x==1){
            return x;
        }
        while(lo<=hi){
            long mid=lo+(hi-lo)/2;
            if(mid*mid==x){
                ans=mid;
                break;
            }
            else if(mid*mid<x){
                ans=mid;
                lo=mid+1;
            }
            else{
                hi=mid-1;
            }
        }
        return (int)ans;
    }
}
