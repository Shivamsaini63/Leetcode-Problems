class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int n=nums.length;
        int sum=0;
        int max=0;
        for(int i=0; i<k; i++){
            sum+=nums[i];
        }
        max=sum;
        for(int j=k; j<n; j++){
            sum+=nums[j]-nums[j-k];
            if(max<sum){
                max=sum;
            }
        }
        return(double)max/k;
    }
}    
